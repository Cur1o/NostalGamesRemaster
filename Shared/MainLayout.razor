@inherits LayoutComponentBase

<PageTitle>Nostalgia Games Remaster</PageTitle>
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_CustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Color="Color.Inherit" Fixed="true" Class="border-4 border-top-0 border-end-0 border-start-0" Style="border-bottom-color: chartreuse">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudText Typo="Typo.h6" Class="ms-auto" Color="Color.Primary">Nostal Games</MudText>
        <MudSwitch @bind-Checked="@_isDarkMode" Color="Color.Primary" Class="ms-auto" T="bool" Label="Light / Dark"/>

    </MudAppBar>
    <MudDrawer ClipMode="DrawerClipMode.Docked" @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Style="height: 100vh; display: flex; justify-content: center; align-content: center">
        <MudStack Justify="Justify.FlexStart" AlignItems="AlignItems.Center" Class="mud-width-full">
            @Body
        </MudStack>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme _CustomTheme = new MudTheme
    {
        Palette = new PaletteLight()
        {
            Black = Colors.Grey.Darken4,
            Background = Colors.Grey.Lighten5,
            BackgroundGrey = Colors.Grey.Darken1,
            Surface = Colors.LightGreen.Accent3,
            Primary = Colors.LightGreen.Accent3,
            Secondary = Colors.Cyan.Accent2,
            AppbarBackground = Colors.Grey.Darken1,
            DrawerBackground = Colors.Grey.Darken1,
            TextPrimary = Colors.Grey.Darken3,
            TextSecondary = Colors.Grey.Darken3

        },
        PaletteDark = new PaletteDark()
        {
            Black = Colors.Shades.Black,
            Background = Colors.Shades.Black,
            BackgroundGrey = Colors.Grey.Darken4,
            Surface = Colors.Green.Darken4,
            Primary = Colors.LightGreen.Accent3,
            Secondary = Colors.Amber.Accent4,
            AppbarBackground = Colors.Grey.Darken4,
            DrawerBackground = Colors.Grey.Darken4,
            TextPrimary = Colors.Amber.Accent4,
            TextSecondary = Colors.Green.Accent2,
            
        }
    };
    private bool _isDarkMode = true;
}

    
